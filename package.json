{
  "name": "yodin",
  "private": true,
  "version": "1.0.0",
  "description": "Zynthesiser",
  "license": "MPL-2.0",
  "config": {
    "entry": "src/index.js",
    "html": {
      "title": "yodin",
      "description": "Zynthesiser",
      "author": "Sonny Kjellberg"
    }
  },
  "scripts": {
    "build": "neo build",
    "start": "neo start --port 3001 --config dev.config.js",
    "test": "neo test",
    "test:watch": "neo test --watch"
  },
  "keywords": [],
  "devDependencies": {
    "flow-bin": "^0.37.4",
    "flow-status-webpack-plugin": "^0.1.7",
    "mozilla-neo": "2.7.0"
  },
  "dependencies": {
    "babel-eslint": "6.1.2",
    "bootstrap": "4.0.0-alpha.2",
    "eslint": "3.5.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-react-app": "^0.5.0",
    "eslint-plugin-flowtype": "2.18.1",
    "eslint-plugin-import": "1.12.0",
    "eslint-plugin-jsx-a11y": "2.2.2",
    "eslint-plugin-react": "6.3.0",
    "ghooks": "1.3.2",
    "immutable": "3.8.1",
    "ramda": "^0.23.0",
    "rc-slider": "^5.4.3",
    "react": "15.3.0",
    "react-addons-test-utils": "15.3.0",
    "react-dom": "15.3.0",
    "react-redux": "4.4.5",
    "react-router": "2.6.1",
    "react-router-redux": "4.0.5",
    "redux": "3.5.2",
    "redux-actions": "^1.2.0",
    "redux-devtools": "3.3.1",
    "redux-devtools-chart-monitor": "1.4.2",
    "redux-devtools-dock-monitor": "1.1.1",
    "redux-devtools-log-monitor": "1.0.11",
    "redux-immutable": "3.0.6",
    "redux-logger": "2.6.1",
    "redux-slider-monitor": "1.0.7",
    "spy": "^1.0.0",
    "styled-components": "^1.2.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "flowtype"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "react/sort-comp": [
        1,
        {
          "order": [
            "static-methods",
            "lifecycle",
            "everything-else",
            "render"
          ],
          "groups": {
            "lifecycle": [
              "displayName",
              "propTypes",
              "contextTypes",
              "childContextTypes",
              "mixins",
              "statics",
              "defaultProps",
              "constructor",
              "getDefaultProps",
              "getInitialState",
              "state",
              "getChildContext",
              "componentWillMount",
              "componentDidMount",
              "componentWillReceiveProps",
              "shouldComponentUpdate",
              "componentWillUpdate",
              "componentDidUpdate",
              "componentWillUnmount"
            ]
          }
        }
      ]
    }
  }
}
